<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui">

	<b:Modal ui:field="registerUserModal" backdrop="STATIC"
		keyboard="true" animation="true">

		<b:Form type="HORIZONTAL">
			<b:Caption>
				<ui:message key="caption">Registrar</ui:message>
			</b:Caption>
			<b:Fieldset>
				<b:ControlGroup>
					<b:ControlLabel for="formUserName" addStyleNames="col-lg-2">
						<ui:message key="UserName">Nombre</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:TextBox b:id="formUserName"></b:TextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel for="formEmail" addStyleNames="col-lg-2">
						<ui:message key="email">Email</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:TextBox b:id="formEmail"></b:TextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel for="formPassword" addStyleNames="col-lg-2">
						<ui:message key="Password">Contraseña</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:PasswordTextBox b:id="formPassword"></b:PasswordTextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel for="formRePassword" addStyleNames="col-lg-2">
						<ui:message key="RePassword">Repite la contraseña</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:PasswordTextBox b:id="formRePassword"></b:PasswordTextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>



			</b:Fieldset>
		</b:Form>

		<b:ModalFooter>
			<b:SubmitButton ui:field="registerButton" type="PRIMARY">
				<ui:msg key="register">Registrar</ui:msg>
			</b:SubmitButton>
			<b:Button ui:field="cancelButton">
				<ui:msg key="cancelRegisterUser">Cancelar</ui:msg>
			</b:Button>
		</b:ModalFooter>


	</b:Modal>
</ui:UiBinder> 