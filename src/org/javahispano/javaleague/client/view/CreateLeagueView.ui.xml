<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui"
	xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui"
	
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:image field='logo' src='../resources/images/logo_small.png' />
	<ui:image field='javahispano' src='../resources/images/logoJavaHispano.png' />

	<b:Panel>
		<b:PanelBody>
			<b:Row>
				<b:Column size="MD_6">
					<b:Form type="HORIZONTAL">
						<b:FieldSet>
							<b:Legend>
								<ui:msg key="caption">Ligas</ui:msg>
							</b:Legend>

							<b:FormGroup>
								<b:FormLabel for="leagueName">
									<ui:msg key="leagueName">Nombre</ui:msg>
								</b:FormLabel>
								<g:FlowPanel addStyleNames="col-lg-10">
									<!-- If you add id attribute to element,You should use b:id attribute. -->
									<b:TextBox b:id="leagueName" ui:field="leagueName"></b:TextBox>
									<b:HelpBlock>
										<ui:msg key="helpLeagueName">Introduce el nombre de la liga</ui:msg>
									</b:HelpBlock>
								</g:FlowPanel>

							</b:FormGroup>

							<b:FormGroup>
								<b:FormLabel for="leagueDescription" addStyleNames="col-lg-2">
									<ui:msg key="leagueDescription">Descripción</ui:msg>
								</b:FormLabel>

								<g:FlowPanel addStyleNames="col-lg-10">
									<b:Input ui:field="leagueDescription" b:id="leagueDescription"></b:Input>
								</g:FlowPanel>
							</b:FormGroup>

							<b:FormGroup>
								<g:FlowPanel addStyleNames="col-lg-offset-2 col-lg-10">
									<b:InputGroup>
										<b:CheckBox ui:field="leaguePublic">
											<ui:msg key="leaguePublic">
												Pública
											</ui:msg>
										</b:CheckBox>
										<b:CheckBox ui:field="leaguePrivate">
											<ui:msg key="leaguePrivate">
												Privada
											</ui:msg>
										</b:CheckBox>
									</b:InputGroup>
								</g:FlowPanel>
							</b:FormGroup>


							<b:FormGroup>
								<g:FlowPanel addStyleNames="col-lg-offset-2 col-lg-10">
									<b:Button type="PRIMARY" ui:field="createLeagueButton">
										<ui:msg key="createLeague">Crear liga</ui:msg>
									</b:Button>
									<b:Button type="DANGER" dismiss="MODAL" ui:field="cancelLeagueButton">
										<ui:msg key="cancelLeague">Cancelar</ui:msg>
									</b:Button>

								</g:FlowPanel>
							</b:FormGroup>

						</b:FieldSet>
					</b:Form>
				</b:Column>
				<b:Column size="MD_5" offset="MD_1">
					<b:Paragraph>
						<ui:msg key="registerUserText">Registrándote en javaLeague podrás crear tus
							propias ligas y competir contra tus amigos !!!</ui:msg>
					</b:Paragraph>
					<b:Image type="CIRCLE" url="images/logo_small.png" />
					<b:Image type="ROUNDED" url="images/logoJavaHispano.png" />
				</b:Column>
			</b:Row>
		</b:PanelBody>
	</b:Panel>



</ui:UiBinder> 