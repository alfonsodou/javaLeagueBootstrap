<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<b:Row>
		<b:Panel>
			<b:PanelHeader>
				<b:Heading size="3">
					<ui:msg key="headerText">Mis Ligas</ui:msg>
				</b:Heading>
			</b:PanelHeader>
			<b:PanelBody>
				<b:Row>
					<b:Column size="MD_6">
						<b:Button ui:field="createLeagueButton">
							<ui:msg key="createLEagueButton" description="Create League Button">Crear Liga</ui:msg>
						</b:Button>
						<b:Button ui:field="searchLeagueButton">
							<ui:msg key="searchLeagueButton" description="Search League Button">Buscar Liga
							</ui:msg>
						</b:Button>
					</b:Column>
					<b:Column size="MD_5" offset="MD_1">
						<b:Paragraph>
							<ui:msg key="registerUserText">Registrándote en javaLeague podrás crear tus
								propias ligas y competir contra tus amigos !!!</ui:msg>
						</b:Paragraph>
						<b:Image type="CIRCLE" url="images/logo_small.png" />
						<b:Image type="ROUNDED" url="images/logoJavaHispano.png" />
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="MD_12">
						<b:CellTable bordered="true" condensed="true" striped="true"
							hover="true" width="100%" ui:field="cellTableLeagues" />
					</b:Column>
				</b:Row>
			</b:PanelBody>
		</b:Panel>
	</b:Row>

</ui:UiBinder> 