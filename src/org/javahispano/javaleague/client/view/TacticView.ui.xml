<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:upload="urn:import:gwtupload.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<b:Row>
		<b:Panel>
			<b:PanelHeader>
				<b:Heading size="3">
					<ui:msg key="myTactic">Mi
						Táctica
					</ui:msg>
				</b:Heading>
			</b:PanelHeader>
			<b:PanelBody>
				<b:Row>
					<b:Column size="MD_6">
						<g:FormPanel ui:field="formPanelTactic">
							<b:Form type="HORIZONTAL" ui:field="formTactic">
								<b:FieldSet>
									<b:FormGroup>
										<b:FormLabel for="updatedTactic" addStyleNames="col-lg-2">
											<ui:msg key="updatedTactic">Actualizada</ui:msg>
										</b:FormLabel>
										<g:FlowPanel addStyleNames="col-lg-10">
											<b:Label ui:field="updatedTactic" type="INFO"></b:Label>
										</g:FlowPanel>
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel for="teamName" addStyleNames="col-lg-2">
											<ui:msg key="teamName">Nombre</ui:msg>
										</b:FormLabel>
										<g:FlowPanel addStyleNames="col-lg-10">
											<b:TextBox b:id="teamName" ui:field="teamName"></b:TextBox>
											<b:Label ui:field="errorTeamName" type="DANGER">
												<ui:msg key="errorTeamName">El nombre no puede estar vacío</ui:msg>
											</b:Label>
											<b:Button ui:field="updateTacticButton">
												<ui:msg key="updateTactic">Actualizar</ui:msg>
											</b:Button>
										</g:FlowPanel>
									</b:FormGroup>
									<b:FormGroup>
										<b:FormLabel for="uploader" addStyleNames="col-lg-2">
											<ui:msg key="jarFile">Fichero jar</ui:msg>
										</b:FormLabel>
										<g:FlowPanel addStyleNames="col-lg-10">
											<b:Badge ui:field="fileName"></b:Badge>
											<upload:SingleUploader ui:field="uploader"
												type="BROWSER_INPUT" validExtensions="jar">
											</upload:SingleUploader>
										</g:FlowPanel>
									</b:FormGroup>

								</b:FieldSet>
							</b:Form>
						</g:FormPanel>
					</b:Column>
					<b:Column size="MD_5" offset="MD_1">
						<b:Label>
							<ui:msg key="teamName" description="Team Name">Nombre del equipo</ui:msg>
						</b:Label>
						<b:Label ui:field="teamNameField"></b:Label>
						<b:Label>
							<ui:msg key="winsMatch">Ganados: </ui:msg>
						</b:Label>
						<b:Label ui:field="winsField"></b:Label>
						<b:Label>
							<ui:msg key="tiedMatch">Empatados:
							</ui:msg>
						</b:Label>
						<b:Label ui:field="tiedField"></b:Label>
						<b:Label>
							<ui:msg key="lostMatch">Perdidos:
							</ui:msg>
						</b:Label>
						<b:Label ui:field="lostField"></b:Label>
						<b:Label>
							<ui:msg key="goalsFor">Goles
								a favor:
							</ui:msg>
						</b:Label>
						<b:Label ui:field="goalsForField"></b:Label>
						<b:Label>
							<ui:msg key="goalsAgainst">Goles en contra: </ui:msg>
						</b:Label>
						<b:Label ui:field="goalsAgainstField"></b:Label>
						<b:Button ui:field="playMatchButton">
							<ui:msg key="playMatchButton" description="Play Match Button">Jugar Partido
								Amistoso
							</ui:msg>
						</b:Button>
					</b:Column>
				</b:Row>
			</b:PanelBody>
		</b:Panel>
	</b:Row>

</ui:UiBinder> 

