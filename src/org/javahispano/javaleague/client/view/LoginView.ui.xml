<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:image field='logo' src='../resources/images/logo_small.png' />
	<ui:image field='twitter' src='../resources/images/twitterlogo.gif' />
	<ui:image field='google' src='../resources/images/googlelogo.gif' />
	<ui:image field='facebook' src='../resources/images/facebooklogo.jpeg' />
	<ui:image field='javahispano' src='../resources/images/logoJavaHispano.png' />


	<b:Modal title="Login" ui:field="loginModal" backdrop="STATIC"
		keyboard="true" animation="true">


		<b:Form type="HORIZONTAL">
			<b:Fieldset>
				<b:ControlGroup>
					<b:ControlLabel for="formEmail" addStyleNames="col-lg-2">
						<ui:message key="email">Email</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:TextBox b:id="formEmail"></b:TextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel for="formPassword" addStyleNames="col-lg-2">
						<ui:message key="Password">Password</ui:message>
					</b:ControlLabel>
					<b:Controls>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:PasswordTextBox b:id="formPassword"></b:PasswordTextBox>
						</g:FlowPanel>
					</b:Controls>
				</b:ControlGroup>
				<b:ControlGroup>
					<b:Controls>
						<b:CheckBox>
							<ui:msg key="rememberMe">
								Recu&eacute;rdame</ui:msg>
						</b:CheckBox>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup>
					<b:ControlLabel>
						<ui:msg key="others">o identif&iacute;cate con</ui:msg>
					</b:ControlLabel>
					<b:Controls>
						<b:Button icon="TWITTER_SIGN" ui:field="twitterButton"></b:Button>
						<b:Button icon="FACEBOOK_SIGN" ui:field="facebookButton"></b:Button>
						<b:Button icon="GOOGLE_PLUS_SIGN" ui:field="googleButton"></b:Button>
					</b:Controls>
				</b:ControlGroup>
			</b:Fieldset>
		</b:Form>


 


		<b:ModalFooter>
			<b:SubmitButton ui:field="loginButton" type="PRIMARY">
				<ui:msg key="signIn">Entrar</ui:msg>
			</b:SubmitButton>
			<b:Button ui:field="registerButton">
			    <ui:msg key="registerButton">Registrarme</ui:msg>
			</b:Button>
			<b:Button ui:field="cancelButton">
				<ui:msg key="cancelSignIn">Cancelar</ui:msg>
			</b:Button>

		</b:ModalFooter>


	</b:Modal>
