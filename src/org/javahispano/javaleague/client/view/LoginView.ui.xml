<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>
	<ui:image field='logo' src='../resources/images/logo_small.png' />
	<ui:image field='twitter' src='../resources/images/twitterlogo.gif' />
	<ui:image field='google' src='../resources/images/googlelogo.gif' />
	<ui:image field='facebook' src='../resources/images/facebooklogo.jpeg' />
	<ui:image field='javahispano' src='../resources/images/logoJavaHispano.png' />


	<b:Modal ui:field="loginModal" backdrop="STATIC" keyboard="true"
		closable="true" fade="true">
		<b:ModalBody>

			<b:Form type="HORIZONTAL">
				<b:FieldSet>
					<b:Legend>
						<ui:msg key="caption">Login</ui:msg>
					</b:Legend>

					<b:FormGroup>
						<b:FormLabel for="formEmail" addStyleNames="col-lg-2">
							<ui:msg key="email">Email</ui:msg>
						</b:FormLabel>

						<g:FlowPanel addStyleNames="col-lg-10">
							<b:TextBox b:id="formEmail"></b:TextBox>
						</g:FlowPanel>

					</b:FormGroup>

					<b:FormGroup>
						<b:FormLabel for="formPassword" addStyleNames="col-lg-2">
							<ui:msg key="Password">Password</ui:msg>
						</b:FormLabel>

						<g:FlowPanel addStyleNames="col-lg-10">
							<b:PasswordTextBox b:id="formPassword"></b:PasswordTextBox>
						</g:FlowPanel>

					</b:FormGroup>
					<!-- <b:FormGroup> <b:CheckBoxButton> <ui:msg key="rememberMe"> Recu&eacute;rdame 
						</ui:msg> </b:CheckBoxButton> </b:FormGroup> -->
					<b:FormGroup>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:FormStatic>
								<ui:msg key="others">o
									identif&iacute;cate
									con
								</ui:msg>
							</b:FormStatic>
						</g:FlowPanel>
					</b:FormGroup>
					<b:FormGroup>
						<g:FlowPanel addStyleNames="col-lg-10">
							<b:ButtonGroup justified="true">
								<b:Button ui:field="twitterButton" icon="TWITTER">
									
								</b:Button>
								<b:Button ui:field="facebookButton" icon="FACEBOOK">
									
								</b:Button>
								<b:Button ui:field="googleButton" icon="GOOGLE_PLUS">
									
								</b:Button>
							</b:ButtonGroup>
						</g:FlowPanel>
					</b:FormGroup>
				</b:FieldSet>
			</b:Form>
		</b:ModalBody>
		<b:ModalFooter>
			<b:ButtonGroup>
				<b:SubmitButton ui:field="loginButton" type="PRIMARY">
					<ui:msg key="signIn">Entrar</ui:msg>
				</b:SubmitButton>
				<b:Button ui:field="registerUserButton">
					<ui:msg key="registerUserButton">Registrarme</ui:msg>
				</b:Button>
				<b:Button ui:field="cancelButton" type="DANGER" dismiss="MODAL">
					<ui:msg key="cancelSignIn">Cancelar</ui:msg>
				</b:Button>
			</b:ButtonGroup>
		</b:ModalFooter>

	</b:Modal>

</ui:UiBinder> 

