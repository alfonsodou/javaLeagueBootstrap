<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:app="urn:import:org.javahispano.javaleague.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.push {
		padding-top: 70px;
	}
	</ui:style>

	<g:ScrollPanel>
		<b:Container>
			<g:SimplePanel ui:field="headerPanel"></g:SimplePanel>

			<g:SimplePanel ui:field="centerPanel" addStyleNames="{style.push}">
			</g:SimplePanel>

			<g:SimplePanel ui:field="footerPanel">
				<b:Row>
					<b:Column size="MD_3">
						<b:Small>
							<ui:msg key="gpl">2014 :: framework javaCup es un proyecto
								opensource con licencia GPL v3</ui:msg>
						</b:Small>
					</b:Column>
					<b:Column size="MD_1" offset="MD_2">
						<b:Paragraph>
							<a href="http://www.javahispano.org">
								<b:Image url="images/logoJavaHispano.png" />
							</a>
						</b:Paragraph>
					</b:Column>
					<b:Column size="MD_1" offset="MD_5">
						<b:Paragraph>
							<a href="https://github.com/alfonsodou">
								<b:Icon type="GITHUB" size="TIMES3"></b:Icon>
							</a>
						</b:Paragraph>
					</b:Column>

				</b:Row>
			</g:SimplePanel>
		</b:Container>
	</g:ScrollPanel>

</ui:UiBinder>